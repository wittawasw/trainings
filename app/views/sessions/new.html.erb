<h1>Sign In</h1>

<p style="color: red"><%= alert %></p>

<%= form_with(url: sessions_path, method: :post) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.submit "Sign In"%>
  </div>
<% end %>
