<h1>Sign In</h1>

<p style="color: red;">
  <%= alert %>
</p>

<%= form_with url: sessions_path, method: :post do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name %>

  <%= form.label :password, "Password" %>
  <%= form.password_field :password %>
  <br/>
  <%= form.submit "Sign In" %>
<% end %>
